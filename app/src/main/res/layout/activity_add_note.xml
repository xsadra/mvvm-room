<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/add_note_parent_padding"
    tools:context=".activity.AddEditNoteActivity">

    <EditText
        android:id="@+id/add_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_note_title"
        android:inputType="text"/>

    <EditText
        android:id="@+id/add_note_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_note_description"
        android:inputType="textMultiLine"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/add_note_priority_title"/>

    <NumberPicker
        android:id="@+id/add_note_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>